{
  "name": "finds-shark-hotspot-forecaster",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:mac": "vite",
    "start:win": "vite --port 3000",
    "worker:dev": "wrangler dev --local --config ./api/worker/wrangler.jsonc",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "mobile:start": "expo start",
    "mobile:android": "expo start --android",
    "mobile:ios": "expo start --ios",
    "mobile:build:android": "eas build --platform android",
    "mobile:build:ios": "eas build --platform ios",
    "mobile:submit:android": "eas submit --platform android",
    "mobile:submit:ios": "eas submit --platform ios",
    "mobile:preview": "expo start --tunnel",
    "pwa:build": "vite build --mode pwa",
    "pwa:preview": "vite preview --mode pwa"
  },
  "dependencies": {
    "react-dom": "^18.2.0",
    "@google/genai": "^1.22.0",
    "react": "^18.2.0",
    "@deck.gl/core": "^9.1.15",
    "@deck.gl/aggregation-layers": "^9.1.15",
    "@deck.gl/react": "^9.1.15",
    "@deck.gl/layers": "^9.1.15",
    "@deck.gl/geo-layers": "^9.1.15",
    "@deck.gl/mesh-layers": "^9.1.15",
    "electron": "^28.0.0",
    "electron-is-dev": "^2.0.0",
    "expo": "~49.0.0",
    "expo-location": "~16.1.0",
    "expo-camera": "~13.4.0",
    "expo-sensors": "~12.3.0",
    "expo-build-properties": "~0.6.0",
    "react-native": "0.73.0",
    "react-native-web": "~0.19.0",
    "@expo/vector-icons": "^14.0.0",
    "expo-status-bar": "~1.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "@expo/cli": "^0.16.0",
    "eas-cli": "^7.0.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "build": {
    "appId": "com.gunnchos.finds",
    "productName": "FINDS - Sharks From Space",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.science-software",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png"
    }
  }
}
